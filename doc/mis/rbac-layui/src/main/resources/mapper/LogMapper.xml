<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yt4j.layuirbac.dao.LogDao">

    <resultMap type="cn.yt4j.layuirbac.model.Log" id="LogMap">
        <id property="id" column="id" />
        <result property="content" column="content" />
        <result property="createTime" column="create_time" />
    </resultMap>

    <!--查询单个-->
    <select id="getById" resultMap="LogMap">
        select
          id, content, create_time
        from log
        where id = #{id}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="list" resultMap="LogMap">
        select
          id, content, create_time
        from log
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
        order by id desc
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into log(id,content, create_time)
        values (#{id},#{content}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update log
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from log where id = #{id}
    </delete>

</mapper>