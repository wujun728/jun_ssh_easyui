<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yt4j.layuirbac.dao.RoleMenuDao">

    <resultMap type="cn.yt4j.layuirbac.model.RoleMenu" id="RoleMenuMap">
        <result property="roleId" column="role_id" />
        <result property="menuId" column="menu_id" />
    </resultMap>

    <!--通过实体作为筛选条件查询-->
    <select id="list" resultMap="RoleMenuMap">
        select
          role_id, menu_id
        from role_menu
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into role_menu(role_id, menu_id)
        values (#{roleId}, #{menuId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update role_menu
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="menuId != null">
                menu_id = #{menuId},
            </if>
        </set>
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from role_menu where role_id = #{roleId}
    </delete>

</mapper>